{
  "name": "broker",
  "modelVersion": "6.0",
  "authenticationproviders": [
    {
      "name": "plain",
      "type": "Plain",
      "secureOnlyMechanisms": [],
      "users": [
        {
          "name": "${qpid.user}",
          "type": "managed",
          "password": "${qpid.pass}"
        }
      ]
    }
  ],
  "ports": [
    {
      "name": "AMQP",
      "port": "${qpid.port}",
      "authenticationProvider": "plain",
      "transports": [
        "TCP"
      ],
      "virtualhostaliases": [
        {
          "name": "defaultAlias",
          "type": "defaultAlias"
        },
        {
          "name": "hostnameAlias",
          "type": "hostnameAlias"
        },
        {
          "name": "nameAlias",
          "type": "nameAlias"
        }
      ]
    },
    {
      "name": "HTTP",
      "port": "${qpid.http_port}",
      "authenticationProvider": "plain",
      "protocols": [
        "HTTP"
      ]
    }
  ],
  "virtualhostnodes": [
    {
      "name": "default",
      "type": "JSON",
      "defaultVirtualHostNode": "true",
      "virtualHostInitialConfiguration": "{\"type\" : \"Memory\",\"name\" : \"default\",\"modelVersion\" : \"6.0\"}"
    }
  ],
  "plugins" : [ {
    "type" : "MANAGEMENT-HTTP",
    "name" : "httpManagement"
  }]
}